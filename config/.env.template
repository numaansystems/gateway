# Environment Variables Template
# Copy this file to .env and customize for your environment
# Usage: source .env before running the gateway

# Required OAuth2 Configuration
export AZURE_CLIENT_ID="your-azure-client-id-here"
export AZURE_CLIENT_SECRET="your-azure-client-secret-here"
export AZURE_TENANT_ID="your-azure-tenant-id-here"

# Optional Environment Settings
export ENVIRONMENT="development"
export SERVER_PORT="8080"

# Service URLs (for production)
export CLIENT1_URL="http://client1-service:8080"
export CLIENT2_URL="http://client2-service:8080"

# JVM Settings (optional)
export JAVA_OPTS="-Xms512m -Xmx2g -XX:+UseG1GC"

# Logging (optional)
export LOG_LEVEL_ROOT="INFO"
export LOG_LEVEL_GATEWAY="DEBUG"

# Actuator Security (optional)
export MANAGEMENT_SECURITY_ENABLED="false"